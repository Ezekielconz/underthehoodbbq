{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "subTitle": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "description": {
      "type": "text"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "art": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "price": {
      "type": "decimal"
    },
    "sku": {
      "type": "string"
    },
    "inStock": {
      "type": "boolean"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "ingredients": {
      "type": "text"
    },
    "colour": {
      "type": "string"
    },
    "glutenFree": {
      "type": "boolean"
    },
    "dairyFree": {
      "type": "boolean"
    },
    "sugarFree": {
      "type": "boolean"
    },
    "veganFriendly": {
      "type": "boolean"
    },
    "nutrition": {
      "type": "component",
      "component": "nutrition.nutrition",
      "repeatable": true
    }
  }
}
